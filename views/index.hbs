<form class="d-flex mb-5" action="/records/search">
    <select class="form-control me-2" name="category" id="category" required>
        {{#if isSearch}}
        <option selected hidden value="{{record.categoryId}}">{{categoryName}}</option>
        {{else}}
        <option value="" disabled selected hidden>類別搜尋</option>
        {{/if}}
        <option value="1">家居物業</option>
        <option value="2">交通出行</option>
        <option value="3">休閒娛樂</option>
        <option value="4">餐飲食品</option>
        <option value="5">其他</option>
    </select>
    <button class="form-control" type="submit" style="width:80px">
        <i class="fa-solid fa-magnifying-glass"></i>
    </button>
</form>

<h1 class="text-center">{{totalAmount}}</h1>
<div class="mt-4">
    {{#each records}}
        <div class="row col-md-8 mx-auto p-2 border">
            <div class="row col-8 align-items-center">
                <div class="col-2">
                    <i class="{{this.categoryId}}"></i>
                </div>
                <div class="col-8">
                    <div>{{this.name}}</div>
                    <div>{{this.date}}</div>
                </div>
                <div class="col-2">{{this.amount}}</div>
            </div>
            
            <div class="row col-4 ms-1 align-items-center">
                <div class="col-6">
                    <a href="/records/{{this._id}}/edit" class="text-decoration-none ms-1">
                        <button type="button" class="btn btn-secondary">Edit</button>
                    </a>
                </div>
                <div class="col-6">
                    <form action="/records/{{this._id}}?_method=DELETE" method="POST" class="ms-1">
                        <button type="sumbit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>
<div class="d-grid gap-2 col-4 mx-auto m-4">
    <a class="btn btn-success" href="/records/create">新增支出</a>
</div>